<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C7CFFB">

    <ImageView
        android:id="@+id/quick_quiz_nav_icon"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/quizz_flash_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:id="@+id/nav_icon_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Quiz"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/quick_quiz_nav_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="8dp"
        android:paddingStart="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: zeeshan@gmail.com"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/nav_icon_text"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="8dp"
        android:paddingStart="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>